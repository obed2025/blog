---
interface Props {
  title?: string;
  date: Date;
}

const { date, title } = Astro.props;
---

<div>
  {title ? <span>{title}</span> : ''}

  <time datetime={date.toISOString()}>
    {
      date.toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })
    }
  </time>
</div>
